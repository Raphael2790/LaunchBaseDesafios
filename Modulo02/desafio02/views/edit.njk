{%extends "layout.njk"%}

{%block content%}
  <div class="container">
    <div class="header-edit">
      <div class="title-edit">
        <h3>Editando receita<h3></div>
          <div class="action-buttons">
            <button type="submit" form="form-edit">Salvar receita</button>
            <button type="submit" form="form-delete">Deletar</button>
          </div>
        </div>

        <form method="POST" action="/admin/recipes?_method=DELETE" id="form-delete">
          <input type="hidden" name="id" value="{{recipe.id}}">
        </form>

        <form method="POST" action="/admin/recipes?_method=PUT" id="form-edit" class="form-input">
          {%include "form.njk"%}
          <input type="hidden" name="id" value="{{recipe.id}}">
        </form>
      </div>
      {%endblock%}