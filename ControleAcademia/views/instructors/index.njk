{% extends 'layout.njk' %}

{%block header%}
<div class="links">
  <a href="/" class="active">Instructors</a>
  <a href="/members">Members</a>
</div>
{%endblock header%}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Seviços</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody> 
        {%for instructor in instructors%}
          <tr>
          <td>
            <span style="background-image: url({{instructor.avatar_url}})"></span>
          {{instructor.name}}</td>
          <td>
            {%for service in services%}
              <span>{{service}}</span>
            {% endfor %}
          </td>
          <td><a href="/instructors/{{instructor.id}}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}
