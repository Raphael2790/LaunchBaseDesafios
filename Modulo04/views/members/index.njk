{% extends 'layout.njk' %}

{%block header%}
<div class="links">
  <a href="/instructors">Instructors</a>
  <a href="/members">Members</a>
</div>
{%endblock header%}

{% block content %}
  <div class="card table-container">

    <a href="/members/create">Novo</a>
    <table width="100%">
      <thead>
        <tr class="tr-members">
          <th>Membro</th>
          <th>Email</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody> 
        {%for member in members%}
          <tr class="tr-members">
          <td>
            <span style="background-image: url({{member.avatar_url}})"></span>
          {{member.name}}</td>
          <td>{{member.email}}</td>
          <td>{{member.weight}}(kg)</td>
          <td>{{member.height}}(m)</td>
          <td><a href="/members/{{member.id}}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}
